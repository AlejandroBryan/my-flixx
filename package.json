{
  "name": "movie_api",
  "version": "1.0.0",
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "description": "The development of a movie API.",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "start": "node dist",
    "app": "nodemon --exec babel-node ./src",
    "build": "npm run clean && babel ./src --out-dir dist --copy-files ",
    "lint": "eslint -c .eslintrc --ext .js src",
    "fix": "eslint --fix --ext .js src/ ",
    "format": "prettier --config .prettierrc --write src/",
    "dev": "concurrently \"npm run app\" ",
    "_start_dev": "pm2 start ecosystem.config.js --env development",
    "_start_prod": "pm2 start ecosystem.config.js --env production"

  },
  "keywords": [
    "node",
    "js",
    "javascript",
    "api",
    "mongodb",
    "rest-api",
    "server-side-rendering",
    "SSR"
  ],
  "author": "Alejandro Bryan",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.423.0",
    "bcrypt": "^5.1.0",
    "concurrently": "^7.6.0",
    "cors": "^2.8.5",
    "ejs": "^3.1.8",
    "ejs-mate": "^4.0.0",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.1",
    "express-validator": "^6.14.3",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.8.4",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "sanitize-s3-objectkey": "^0.0.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.7",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/node": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "dotenv": "^16.0.3",
    "eslint": "^7.32.0",
    "eslint-config-plugin": "^1.0.11",
    "eslint-config-prettier": "^8.5.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.1"
  }
}
